#include <stdlib.h>
#include <stdio.h>
#include <time.h>
/**
 *main - Entry point 
 *
 *Return:always 0
 */
int main(void)
{
int n;
srand((0));
n = rand() - RAND_MAX / 2;
if(n==0)
printf("%d is zero \n", n);
else
if(n<0)
printf("%d is a negative number \n",n);
else
printf("%d is a positive number \n",n);
return (0);
}
